# Docker
alias d='docker'
alias dstats='d stats -a --no-stream'
alias dimgs='d images'
alias drm='d rm -v'
alias drmi='d rmi'
alias dstop='d stop'
alias dlogs='d logs -f'
alias dps='d ps -a --format "table{{.Names}}\t{{.Image}}\t{{.Status}}\t{{.RunningFor}}"'
alias dpull='d pull'
alias drun='d run -d'
alias dit='d exec -it'
alias dzerofill='d system prune -a'
alias removeuntagged='drmi -f $(dimgs | grep "^<none>" | awk "{print $3}")'
alias removecontainer='d rm $(d ps --all -q -f status=exited)'
alias removeimages='drmi $(dimgs -q -a) -f'
alias removealldocker='d rm -f $(d ps -q -a)'
